<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.antonio.lab2.MainActivity">

    <TextView
        android:id="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_play_sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_play_raw"
        android:layout_marginTop="24dp"
        android:text="從SD卡播放" />

    <Button
        android:id="@+id/btn_play_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_play_sd"
        android:layout_marginTop="24dp"
        android:text="從URL播放" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_play"
        android:layout_below="@+id/btn_play"
        android:layout_marginTop="29dp"
        android:text="停止" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_play_url"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/btn_volume_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="42dp"
        android:text="音量+" />

    <Button
        android:id="@+id/btn_volume_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_volume_up"
        android:layout_toStartOf="@+id/btn_stop"
        android:text="音量-" />

    <Button
        android:id="@+id/btn_play_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_play_sd"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:text="從raw播放" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_play_raw"
        android:layout_alignBottom="@+id/btn_play_raw"
        android:layout_alignParentEnd="true"
        android:text="播放" />
</RelativeLayout>
